{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
      }
    },
    {
      "name": "POST with valid data",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Тестов",
        "email": "test@example.com",
        "phone": "+7 999 123-45-67",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Missing required fields"
      },
      "bodyMatcher": "partial"
    }
  ]
}
